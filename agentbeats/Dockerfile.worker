FROM python:3.13-slim

WORKDIR /app

RUN apt-get update && apt-get install -y git curl && rm -rf /var/lib/apt/lists/*

# Clone tau2-bench and install it
RUN git clone https://github.com/sierra-research/tau2-bench /app/tau2-bench && \
    cd /app/tau2-bench && \
    pip install --no-cache-dir -e .

# Install additional dependencies for worker agent
RUN pip install --no-cache-dir python-dotenv fastapi uvicorn a2a-sdk google-adk google-genai httpx

# Copy worker agent script
COPY agentbeats/tau2_worker.py ./

ENV TAU2_DATA_DIR=/app/tau2-bench/data
EXPOSE 9200

ENTRYPOINT ["python", "tau2_worker.py"]
CMD ["--host", "0.0.0.0", "--port", "9200"]
